root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.css]
indent_size = 2
tab_width = 2

[*.scss]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.ts,*.vue}]
indent_size = 2
tab_width = 2

[{.prettierrc,.eslintrc,.stylelintrc,.babelrc,jest.config,bowerrc,*.json,*.jsb3,*.jsb2}]
indent_size = 2
